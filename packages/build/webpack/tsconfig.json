{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2017", "dom"],
    "types": ["jest"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "resources",
    "**packages",
  ]
}
