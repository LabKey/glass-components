{
  "compilerOptions": {
    "outDir": "staging",
    "onlyCompileBundledFiles": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "isolatedModules": true,
    "target": "esnext",
    "lib": ["es2015", "es2017", "dom"],
    "types": ["jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
